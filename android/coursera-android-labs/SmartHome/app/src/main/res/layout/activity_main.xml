<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensors"
        android:id="@+id/sensors_btn"
        android:background="#00000000"
        android:layout_above="@+id/setting_btn"
        android:layout_toStartOf="@+id/setting_btn"
        android:layout_marginEnd="27dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Control"
        android:id="@+id/control_btn"
        android:background="#00000000"
        android:layout_alignTop="@+id/sensors_btn"
        android:layout_toEndOf="@+id/setting_btn"
        android:layout_marginStart="28dp" />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:id="@+id/setting_btn"
        android:layout_above="@+id/about_btn"
        android:layout_centerHorizontal="true"
        android:background="#00000000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/about_btn"
        android:layout_above="@+id/exit_btn"
        android:layout_alignStart="@+id/exit_btn"
        android:background="#00000000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exit_btn"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/setting_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Smart Home System"
        android:id="@+id/textView"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
